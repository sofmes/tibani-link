{
  "name": "tibani-link",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "test": "vitest",
    "build": "vite build --mode client && vite build",
    "migrations:generate": "drizzle-kit generate",
    "migrations:apply:local": "wrangler d1 migrations apply tibani-link --local",
    "migrations:apply:remote": "wrangler d1 migrations apply tibani-link --remote",
    "deploy": "vite build && wrangler deploy ./dist/_worker.js"
  },
  "private": true,
  "dependencies": {
    "hono": "^4.5.2",
    "honox": "^0.1.23",
    "resend": "^3.5.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240725.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "@hono/vite-dev-server": "^0.13.1",
    "@types/bun": "^1.1.6",
    "autoprefixer": "^10.4.19",
    "drizzle-kit": "^0.23.0",
    "drizzle-orm": "^0.32.1",
    "miniflare": "^3.20240718.1",
    "postcss": "^8.4.40",
    "tailwindcss": "^3.4.7",
    "vite": "^5.3.5",
    "vitest": "^2.0.4",
    "wrangler": "^3.67.1"
  }
}
